let daily = document.getElementById("daily");
let weekly = document.getElementById("weekly");
let monthly = document.getElementById("monthly");




let RLTT = document.getElementById("RLTtime");
let RLTL = document.getElementById("RLTlast");

daily.addEventListener("click", () => {
    RLTT.textContent = "8hrs";
    RLTL.textContent = "Yesterday - 9hrs";
});

weekly.addEventListener("click", () => {
    RLTT.textContent = "32hrs";
    RLTL.textContent = "Last Week - 36hrs";
});

monthly.addEventListener("click", () => {
    RLTT.textContent = "162hrs";
    RLTL.textContent = "Last Month - 159hrs";
});


let RLBT = document.getElementById("RLBtime");
let RLBL = document.getElementById("RLBlast");

